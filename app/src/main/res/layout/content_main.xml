<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/content_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryDark2"
              android:orientation="vertical"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".MainActivity"
              tools:showIn="@layout/activity_main">

    <com.github.bkhezry.searchablespinner.SearchableSpinner
        android:id="@+id/searchable_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_choose_edit_text"
        android:gravity="center_horizontal"
        app:divider_height="0.5dp"
        app:font_name="DroidNaskh-Regular.ttf"
        app:items_divider="@color/gray_400"
        app:no_items_found_text="@android:color/white"
        app:reveal_empty_text="انتخاب کنید"
        app:reveal_view_background_color="@android:color/transparent"
        app:search_view_background_color="@android:color/white"
        app:show_borders="true"
        app:spinner_expand_height="300dp"
        app:start_search_tint_color="@android:color/darker_gray"/>

    <com.github.bkhezry.searchablespinner.SearchableSpinner
        android:id="@+id/searchable_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_choose_edit_text"
        android:gravity="center_horizontal"
        app:borders_size="1dp"
        app:done_search_tint_color="@android:color/white"
        app:font_name="DroidNaskh-Regular.ttf"
        app:reveal_empty_text="انتخاب کنید"
        app:reveal_view_background_color="@android:color/transparent"
        app:search_view_background_color="@android:color/white"
        app:show_borders="false"
        app:spinner_expand_height="0dp"
        app:start_search_tint_color="@android:color/darker_gray"/>

    <com.github.bkhezry.searchablespinner.SearchableSpinner
        android:id="@+id/searchable_spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/bg_choose_edit_text"
        android:gravity="center_horizontal"
        app:boarder_color="@android:color/transparent"
        app:borders_size="1dp"
        app:done_search_tint_color="@android:color/white"
        app:font_name="DroidNaskh-Regular.ttf"
        app:reveal_empty_text="انتخاب کنید"
        app:reveal_view_background_color="@android:color/transparent"
        app:search_view_background_color="@android:color/transparent"
        app:searchable="false"
        app:show_borders="false"
        app:spinner_expand_height="220dp"
        app:start_search_tint_color="@android:color/white"/>

</LinearLayout>
